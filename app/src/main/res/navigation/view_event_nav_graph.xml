<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_event_nav_graph"
    app:startDestination="@id/view_event_destination">

    <fragment
        android:id="@+id/view_event_destination"
        android:name="toluog.campusbash.view.ViewEventFragment"
        android:label="fragment_view_event"
        tools:layout="@layout/fragment_view_event">
        <argument
            android:name="eventId"
            app:argType="string" />
        <deepLink app:uri="campusbash-e0ca8.firebaseapp.com/events/{eventId}" />
        <action
            android:id="@+id/action_view_event_destination_to_buy_ticket_destination"
            app:destination="@id/buy_ticket_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/view_event_destination"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/buy_ticket_destination"
        android:name="toluog.campusbash.view.BuyTicketFragment"
        android:label="BuyTicketFragment" >
        <action
            android:id="@+id/action_buy_ticket_destination_to_ticketPurchaseSuccessFragment"
            app:destination="@id/ticket_purchase_success_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/view_event_destination"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_buy_ticket_destination_to_card_payment_destination"
            app:destination="@id/card_payment_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/buy_ticket_destination"
            app:popUpToInclusive="true" />
        <argument
            android:name="eventId"
            app:argType="string"
            app:nullable="true"/>
    </fragment>
    <fragment
        android:id="@+id/card_payment_destination"
        android:name="toluog.campusbash.view.CardPaymentFragment"
        android:label="fragment_card_payment"
        tools:layout="@layout/fragment_card_payment" >
        <action
            android:id="@+id/action_card_payment_destination_to_ticketPurchaseSuccessFragment"
            app:destination="@id/ticket_purchase_success_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/view_event_destination"
            app:popUpToInclusive="true" />
        <argument
            android:name="price"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/ticket_purchase_success_destination"
        android:name="toluog.campusbash.view.TicketPurchaseSuccessFragment"
        android:label="fragment_ticket_purchase_success"
        tools:layout="@layout/fragment_ticket_purchase_success" >
        <action
            android:id="@+id/action_ticket_purchase_success_destination_to_mainActivity"
            app:destination="@id/main_activity_destination" />
    </fragment>
    <activity
        android:id="@+id/main_activity_destination"
        android:name="toluog.campusbash.view.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>