<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <android.support.text.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="John Doe" />

        <android.support.text.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/user_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras tristique a leo a eleifend. Aliquam aliquet tincidunt quam ac mattis. Morbi sit amet finibus nulla. Nam vel urna at sem viverra gravida fermentum tristique tortor. Praesent semper, lacus egestas varius rutrum, ante augue rutrum tellus, a pellentesque risus urna quis diam. Vestibulum sem " />
    </LinearLayout>
</LinearLayout>